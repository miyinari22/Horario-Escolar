<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfiguracionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:scaleType="centerCrop"
            android:src="@drawable/robot_a"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Cambiar Avatar"
            app:layout_constraintTop_toBottomOf="@+id/profile_image"
            tools:layout_editor_absoluteX="16dp" />

        <Button
            android:id="@+id/btnChange_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:backgroundTint="@color/mindaro"
            android:text="Guardar cambios"
            app:layout_constraintTop_toBottomOf="@+id/tareaHora"
            tools:layout_editor_absoluteX="16dp" />

        <Switch
            android:id="@+id/switchClase"
            android:layout_width="379dp"
            android:layout_height="37dp"
            android:layout_marginTop="36dp"
            android:text="Notificaciones de clase"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button" />

        <Button
            android:id="@+id/claseNotif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notificar sobre prÃ³ximas clases"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switchClase" />

        <Switch
            android:id="@+id/switchTarea"
            android:layout_width="382dp"
            android:layout_height="36dp"
            android:layout_marginTop="32dp"
            android:text="Notificaciones de Tarea"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/claseNotif" />

        <Button
            android:id="@+id/tareaSemana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Dias de la semana"
            app:layout_constraintTop_toBottomOf="@+id/switchTarea"
            tools:layout_editor_absoluteX="5dp" />

        <Button
            android:id="@+id/tareaHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora"
            app:layout_constraintTop_toBottomOf="@+id/tareaSemana"
            tools:layout_editor_absoluteX="127dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
